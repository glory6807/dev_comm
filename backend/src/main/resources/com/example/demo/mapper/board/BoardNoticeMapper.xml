    <!-- REPLY_WRITE -->
    <insert id="noticeReplyWrite" parameterType="com.example.demo.vo.reply.ReplyVo">
        INSERT INTO REPLY_NOTICE(
                        BOARD_NO,
                        REPLY_CNTN,
                        UP_REPLY_NO,
                        IS_DEL,
                        REG_MEM_ID,
                        CRT_DT,
                        MOD_DT
                        )
                VALUES (
                    #{boardNo},
                    #{replyCntn},
                    #{upReplyNo},
                    'N',
                    #{regMemId},
                    NOW(),
                    NOW()
                )
    </insert>
    
    <!-- REPLY_EDIT -->
    <update id="noticeReplyEdit">
        UPDATE REPLY_NOTICE
        SET reply_cntn = #{replyCntn}
        WHERE reply_no = #{replyNo}
    </update>

    <!-- REPLY_DELETE -->
    <update id="noticeReplyDel">
        UPDATE REPLY_NOTICE
        SET is_del = 'Y'
        WHERE reply_no = #{replyNo}
    </update>

</mapper>